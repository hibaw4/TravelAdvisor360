<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AIPlanningFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Trip Planner"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="500"
                android:valueTo="10000"
                android:stepSize="500"
                android:value="2000"/>

            <TextView
                android:id="@+id/tv_budget_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:text="$2000"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="1"
                android:valueTo="14"
                android:stepSize="1"
                android:value="3"/>

            <TextView
                android:id="@+id/tv_duration_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:text="3 days"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cb_cultural"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cultural experiences (museums, historical sites)"
            android:layout_marginVertical="4dp"/>

        <CheckBox
            android:id="@+id/cb_adventure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adventure activities (hiking, sports)"
            android:layout_marginVertical="4dp"/>

        <CheckBox
            android:id="@+id/cb_relaxation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relaxation (beaches, spas)"
            android:layout_marginVertical="4dp"/>

        <CheckBox
            android:id="@+id/cb_food_tourism"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food tourism (local cuisine, cooking classes)"
            android:layout_marginVertical="4dp"/>

        <Button
            android:id="@+id/btn_generate_itinerary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Itinerary"
            android:layout_marginTop="16dp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_generated_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generated Itinerary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_generated_itinerary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            tools:itemCount="3"
            tools:listitem="@layout/item_itinerary_day"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>