<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/primary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="16dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/iv_experience_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/placeholder_experience" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@android:color/black"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_right"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_right"
                app:layout_collapseMode="pin"
                app:tint="@android:color/white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User info section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    tools:src="@drawable/placeholder_profile" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        tools:text="Emma Wilson" />

                    <TextView
                        android:id="@+id/tv_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="5 days ago" />

                </LinearLayout>
            </LinearLayout>

            <!-- Experience details -->

            <TextView
                android:id="@+id/tv_experience_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tv_experience_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience Description"
                android:maxLines="5"
                android:ellipsize="end"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tv_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read more"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:paddingBottom="12dp"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/tv_experience_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_experience_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100"
                android:textSize="18sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins_bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_experience_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_experience_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 hours"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(12 reviews)"
                android:paddingBottom="16dp" />

            <!-- Comments RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="16dp" />

            <!-- Book experience button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_book_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Experience"
                android:layout_marginTop="16dp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                />

            <!-- Loading indicator (invisible by default) -->
            <ProgressBar
                android:id="@+id/loading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:paddingTop="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
