<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E8EAF6" />
        </shape>
    </item>

    <!-- Grid lines - Horizontal -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#BBDEFB" android:dashWidth="8dp" android:dashGap="4dp" />
        </shape>
    </item>

    <!-- Grid lines - Vertical -->
    <item>
        <rotate android:fromDegrees="90">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="#BBDEFB" android:dashWidth="8dp" android:dashGap="4dp" />
            </shape>
        </rotate>
    </item>

    <!-- Roads -->
    <item>
        <shape android:shape="line">
            <stroke android:width="4dp" android:color="#FFCC80" />
        </shape>
    </item>
</layer-list>